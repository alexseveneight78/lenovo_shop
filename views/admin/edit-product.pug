extends ../layouts/main-layout.pug
block styles 
block content
    main 
        h3 Add product
        form(action=(editing ? "/admin/edit-product" : "/admin/add-product"), method="post")
            label(for="title") Title
            input(type="text", name="title", id="title", value=(editing ? product.title : ''))
            hr
            label(for="imageUrl") Image URL
            input(type="text", name="imageUrl", id="imageUrl", value=(editing ? product.imageUrl : ''))
            hr
            label(for="price") Price
            input(type="number", name="price", id="price", step="0.01", value=(editing ? product.price : ''))
            hr
            label(for="description") Description
            textarea(cols='30', rows='10', name="description", id="description") #{editing ? product.description : ''}
            hr
            input(type="submit", value=(editing ? 'Update product' : 'Add product')) 