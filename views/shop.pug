extends ./layouts/main-layout.pug
block styles 
block content
    main 
        h3 Shop
        if prods.length > 0 
            .cards 
                each product in prods 
                    .card 
                        h3 #{product.title}
                        p 
                            img(src='https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Ftse4.mm.bing.net%2Fth%3Fid%3DOIP.5SUhFpKmTir7RkmDLUqUXgAAAA%26pid%3DApi&f=1', alt="")
                        p #{product.price}
                        p #{product.description} 

        else 
            h3 No products added yet! 