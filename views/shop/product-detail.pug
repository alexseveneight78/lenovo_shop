extends ../layouts/main-layout.pug
block styles 
block content
    main.centered 
        h1 #{product.title}
        hr
        div
            img(src=product.imageUrl)
        h2 #{product.price}
        p #{product.description}
        form(action="/cart", method="post")
            button(type="submit", class='btn') Add to cart
            input(type="hidden", name="productId", value=product.id)